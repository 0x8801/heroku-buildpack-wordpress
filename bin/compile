#!/bin/bash
# Usage: bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

# START CONFIG
NGINX_VENDOR_DIR=/app/vendor/nginx
NGINX_VERSION=1.0.11
S3_BUCKET=heroku-buildpack-wordpress
# END CONFIG

#
NGINX_URL="https://s3.amazonaws.com/${S3_BUCKET}/nginx-${NGINX_VERSION}-heroku.tar.gz"
#

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

BUILD_DIR=$1
CACHE_DIR=$2
mkdir -p $BUILD_DIR $CACHE_DIR

echo "-----> Installing Nginx"
if [ ! -d $NGINX_VENDOR_DIR ]; then
  echo "-----> Bundling Nginx v$APACHE_VERSION"
  curl --silent --max-time 60 --location $NGINX_URL | tar xz
fi
