#!/bin/bash
# Usage: bin/compile <build-dir> <cache-dir>

set -e

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

build=$1 # /app
cache=$2

#ensure it exists
mkdir -p $build $cache
echo "-----> Install nginx"

cd $build
ls -la

cd $cache
ls -la

# Move wordpress into a /app/www
cd $build
mkdir -p $cache/www
mv * $cache/www
mv $cache/www .

# Keep Procfile in root.
if [ -f www/Procfile ]; then
  mv www/Procfile .
fi

# echo "-----> Fetching Wordpress dependencies"
# 
